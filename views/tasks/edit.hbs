<h2>Edit task</h2>
<form method="post">
    <fieldset class="form-group">
        <label for="task" class="control-label col-2">Task: </label>
        <input class="form-control" name="task" id="task" required value="{{task.task}}"/>

        <label for="notes" class="control-label col-2">Notes: </label>
        <input class="form-control" name="notes" id="notes" required value="{{notes.notes}}"/>
    </fieldset>
    <div class="offset-2">
        <button class="btn btn-primary">Save task</button>
    </div>
</form>